# Автоопределение текстовых файлов
* text=auto

# Unity текстовые файлы (нужна нормализация окончаний строк)
*.meta text=auto
*.unity text=auto
*.asset text=auto
*.prefab text=auto
*.mat text=auto
*.anim text=auto
*.controller text=auto
*.shader text=auto
*.cs text=diff

# Файлы сцен и префабов (особо важны для мержа)
*.unity text=auto merge=unityyamlmerge
*.prefab text=auto merge=unityyamlmerge
*.asset text=auto merge=unityyamlmerge

